<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/msfl_error_icon"
            android:layout_width="@dimen/msfl_error_icon_size"
            android:layout_height="@dimen/msfl_error_icon_size"
            android:src="@drawable/ic_error" />

        <tr.wolflame.framework.base.util.helper.TextViewPlus
            android:id="@+id/msfl_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_between_content_areas"
            app:customFont="@string/robotoRegular" />

    </LinearLayout>
</FrameLayout>